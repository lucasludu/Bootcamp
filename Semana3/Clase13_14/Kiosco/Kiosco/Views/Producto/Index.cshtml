@model IEnumerable<Kiosco.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Categoria)</th>
            <th>@Html.DisplayNameFor(model => model.FechaBaja)</th>
            <th></th>
        </tr>
    </thead>
    <tbody> @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Categoria)</td>
            <td>@Html.DisplayFor(modelItem => item.FechaBaja)</td>
            <td>
                <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Producto", new { id = item.Id })">Editar</a>
                <a class="btn btn-secondary btn-sm" href="@Url.Action("Details", "Producto", new { id = item.Id })">Details</a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Producto", new { id = item.Id })">Delete</a>
            </td>
        </tr>
    } </tbody>
</table>
