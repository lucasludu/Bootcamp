@model Concesionaria.Models.Automovil

@{
    ViewBag.Title = "RegistrarAutomovil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">

    <div class="col-sm-12">

        <div class="panel panel-warning">

            <div class="panel-heading">
                <h4>Registrar Auto</h4>
            </div>

            <div class="panel-body">
                <form action="@Url.Action("RegistrarAutomovil","Automovil")" method="post">
                    <div class="form-group">
                        <label>Marca</label>
                        <input type="text" class="form-control" name="marca" />
                    </div>
                    <div class="form-group">
                        <label>Modelo</label>
                        <input type="text" class="form-control" name="modelo" />
                    </div>
                    <div class="form-group">
                        <label>Año</label>
                        <input type="text" class="form-control" name="anio" />
                    </div>
                    <div class="form-group">
                        <label>Kilometraje</label>
                        <input type="text" class="form-control" name="kilometro" />
                    </div>
                    <div class="form-group">
                        <label>Precio</label>
                        <input type="text" class="form-control" name="precio" />
                    </div>

                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a class="btn btn-warning" href="@Url.Action("ListaAutomoviles","Automovil")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>
